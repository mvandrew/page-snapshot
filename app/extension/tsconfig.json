{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["chrome"],
    "allowJs": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "manifest.config.ts"]
}
