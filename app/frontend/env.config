# Конфигурация окружения для Page Snapshot Frontend
# Скопируйте этот файл в .env и настройте под ваше окружение

# Backend API URL
# URL сервера для получения markdown контента
VITE_API_BASE_URL=http://localhost:3000

# Таймаут запросов (в миллисекундах)
# Время ожидания ответа от сервера
VITE_API_TIMEOUT=5000

# Режим разработки
# Включить дополнительные логи и отладочную информацию
VITE_DEBUG_MODE=false

# Настройки кеширования
# Включить/выключить локальное кеширование данных
VITE_ENABLE_CACHE=true

# Максимальный размер кеша (в байтах)
# 0 = без ограничений
VITE_CACHE_MAX_SIZE=10485760

# Настройки уведомлений
# Показывать toast уведомления для действий
VITE_ENABLE_TOASTS=true

# Автоматическое обновление контента (в миллисекундах)
# 0 = отключено, интервал в миллисекундах для автообновления
VITE_AUTO_REFRESH_INTERVAL=0
